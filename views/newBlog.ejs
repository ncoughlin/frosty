<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<!-- begin content -->
    <!-- fixed width container for content -->
    <div class="container-lg mt-5 height100">
    <h1 class="settings-title">New Blog</h1>
        <!--input for title, author, image, content -->
        <form action="/blogs" method="POST" enctype="multipart/form-data">
            
            <div class="form-group">
                <label for="featuredImageUpload">
                    <h4>Featured Image</h4>
                </label>
                <input type="file" id="featuredImageUpload" name="blog[image]" accept="image/*" required>
            </div>

            <div class="form-group">
                <label for="titleInput">
                    <h4>Title</h4>
                </label>
                <input type="text" class="form-control" id="titleInput" placeholder="Enter Post Title" name="blog[title]" required>
            </div>
            
            <div class="form-group">
                <label for="dateInput">
                    <h4>Date</h4>
                </label>
                <input type="date" class="form-control" id="dateInput" name="blog[date]" value="<%= moment(new Date()).format('YYYY-MM-DD')%>" >
                <small id="dateInputHelp" class="form-text text-muted">If left blank will default to current date.</small>
            </div>
            
            <div class="form-group">
                <label for="shortDescriptionInput">
                    <h4>Short Description</h4>
                </label>
                <textarea class="form-control" id="shortDescriptionInput" rows="3" placeholder="A short description of your content..." name="blog[short]"></textarea>
                <small id="shortDescriptionHelp" class="form-text text-muted">This short description will be visible on the homepage.</small>
            </div>

            <div class="form-group">
                <label for="contentInput">
                    <h4>Content</h4>
                </label>
                <textarea class="form-control" id="contentInput" rows="3" placeholder="Content goes here..." name="blog[content]"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>


<%- include("partials/footer.ejs") %>
<%- include("partials/bootstrap.ejs") %>