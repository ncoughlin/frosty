<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<!-- begin content -->
    <!-- fixed width container for content -->
    <div class="container-lg mt-5">

        <!--input for title, author, image, content -->
        <form>

            <div class="form-group">
                <label for="featuredImageUpload">
                    <h4>Featured Image</h4>
                </label>
                <input type="file" class="form-control-file" id="featuredImageUpload">
            </div>

            <div class="form-group">
                <label for="titleInput">
                    <h4>Title</h4>
                </label>
                <input type="text" class="form-control" id="titleInput" placeholder="Enter Post Title">
            </div>

            <div class="form-group">
                <label for="authorInput">
                    <h4>Author</h4>
                </label>
                <input type="text" class="form-control" id="authorInput" placeholder="Enter Author Name">
            </div>

            <div class="form-group">
                <label for="contentInput">
                    <h4>Content</h4>
                    </h4>
                </label>
                <textarea class="form-control" id="contentInput" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>


<%- include("partials/footer.ejs") %>